.header__navbar.navbar
  .container.navbar__container
    //- Logo side
    a.navbar__logo-link(href="#top")
      include ../../static/images/svg/logo.svg

    //- Rigt side
    .navbar__controls
      //- Navigation
      nav.navbar__nav.nav
        ul.nav__list
          li.nav__item
            a.nav__link(href="#about") About
          li.nav__item
            a.nav__link(href="#how") How work
          li.nav__item
            a.nav__link(href="#contacts") Contacts
      //- End navigation

      //- Language switcher
      .navbar__lng.lng
        .lng__current
          img.lng__flag(src="./static/images/header/lng/eng.jpg"
     srcset="./static/images/header/lng/eng@2x.jpg 2x, ./static/images/header/lng/eng@3x.jpg 3x")
          span.lng__name ENG
          .lng__arrow
            include ../../static/images/svg/lng-arrow.svg
        .lng__hidden
          ul
            li
              img.lng__flag(src="./static/images/header/lng/eng.jpg"
     srcset="./static/images/header/lng/eng@2x.jpg 2x, ./static/images/header/lng/eng@3x.jpg 3x")
              span.lng__name ENG
            li
              img.lng__flag(src="./static/images/header/lng/eng.jpg"
     srcset="./static/images/header/lng/eng@2x.jpg 2x, ./static/images/header/lng/eng@3x.jpg 3x")
              span.lng__name ENG

      //- End language switcher

      //- Button
      a.navbar__btn.btn.btn__type_first(href="/") download app
      //- End button